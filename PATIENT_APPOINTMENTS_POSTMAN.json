  },
  "item": [
    {
      "name": "Get All Appointments",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/appointments/patient/appointments/",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "appointments",
            "patient",
            "appointments",
            ""
          ]
        },
        "description": "Get all appointments for the authenticated patient with default pagination (10 per page)"
      },
      "response": []
    },
    {
